{
  "name": "@robot-admin/layout",
  "version": "2.0.2",
  "description": "Layout and settings management system for Robot Admin - v2.0 with decoupled architecture",
  "type": "module",
  "keywords": [
    "vue",
    "layout",
    "settings",
    "pinia",
    "admin"
  ],
  "author": "ChenYu <ycyplus@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChenyCHENYU/robot-admin-packages",
    "directory": "packages/layout"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style": "./dist/index.css",
    "./css": "./dist/index.css",
    "./style.scss": "./src/styles/settings.scss"
  },
  "files": [
    "dist",
    "src/styles",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vue-tsc --noEmit && vite build",
    "clean": "rm -rf dist",
    "type-check": "vue-tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "vue": "^3.4.0",
    "pinia": "^2.0.0 || ^3.0.0",
    "naive-ui": "^2.38.0",
    "@robot-admin/theme": "^0.1.0"
  },
  "devDependencies": {
    "@robot-admin/theme": "workspace:*",
    "@types/node": "^22.13.9",
    "@vitejs/plugin-vue": "^5.2.1",
    "naive-ui": "^2.41.0",
    "pinia": "^3.0.1",
    "sass": "^1.83.4",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.1.6"
  }
}