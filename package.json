{
  "name": "robot-admin-packages",
  "version": "0.0.0",
  "private": true,
  "description": "Robot Admin 可复用插拔式公共依赖包 Monorepo",
  "author": "ChenYu <ycyplus@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChenyCHENYU/robot-admin-packages"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter './packages/*' dev",
    "build": "bun run --filter './packages/*' build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish",
    "clean": "bun run --filter './packages/*' clean",
    "type-check": "bun run --filter './packages/*' type-check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.8.0"
  },
  "packageManager": "bun@1.3.8"
}

